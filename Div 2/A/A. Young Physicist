#include<bits/stdc++.h>
using namespace std;
int main()
{
	int n;
	cin>>n;
	int x[n],y[n],z[n];
	for(int i=0;i<n;i++)
	{
		cin>>x[i]>>y[i]>>z[i];
	}
	int x1=accumulate(x,x+n,0);
	int y1=accumulate(y,y+n,0);
	int z1=accumulate(z,z+n,0);
	if(x1!=0||y1!=0||z1!=0)
	cout<<"NO"<<endl;
	else
	cout<<"YES"<<endl;
}
